<body>

<!-- Navbar -->
<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" <%= link_to 'Książka Kucharska', controller: 'welcome' %></a>
      
      
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <li><a class="navbar-brand" <%= link_to '| Dodaj Przepis |', new_recipe_path %></a></li>
        <li><a class="navbar-brand" <%= link_to '| Przeglądaj Przepisy |', controller: 'recipes' %></li>
      </ul>
    </div>
  </div>
</nav>

<!-- First Container -->
<div class="container-fluid bg-1">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-condensed">
        <tr>
          <th>Tytuł</th>
          <th>Składniki</th>
          <th>Opis</th>
          <th colspan="3"></th>
        </tr>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.tytuł %></td>
          <td><%= recipe.składniki %></td>
          <td><%= recipe.opis %></td>
          <td><%= link_to 'Pokaż', recipe_path(recipe) %></td>
          <td><%= link_to 'Edytuj', edit_recipe_path(recipe) %></td>
          <td><%= link_to 'Usuń', recipe_path(recipe),
                  method: :delete,
                  data: { confirm: 'Czy jesteś pewny?' } %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<!-- Footer -->
<footer class="container-fluid bg-3 text-center">
  <p>Klimaszewski Karol</p> 
</footer>
