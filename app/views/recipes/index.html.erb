<div class="container-fluid bg-1">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= form_for(:search, method: "get") do |f| %>
      <%= f.text_field :search, placeholder: "Szukaj", class: "form-control" %><br>
      <%= f.submit "Szukaj" %>
    <% end %><br>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-condensed">
        <tr>
          <th>Tytuł</th>
          <th>Składniki</th>
          <th>Opis</th>
          <th colspan="3"></th>
        </tr>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.tytuł %></td>
          <td><%= recipe.składniki %></td>
          <td><%= recipe.opis %></td>
          <td><%= link_to '|Pokaż|', recipe_path(recipe) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
